#!/bin/bash

VIM_SRC=$(dirname $(readlink -f $0))/vimsrc

if [ ! -d "$VIM_SRC" ]; then
  echo "Bad VIM source path. Exit."
  exit 1
fi

pushd $VIM_SRC
git clean -dfx *
git checkout -- *
make clean distclean

git pull
./configure --prefix=$HOME/.marslo/myprograms/vim74 --enable-pythoninterp=yes --with-python-config-dir=/usr/local/lib/python2.7/config --enable-rubyinterp=yes --with-features=huge --disable-smack --enable-fail-if-missing --with-compiledby=marslo@appliance > vim-build.log

make -j3 >> vim-build.log
make install >> vim-build.log

popd
